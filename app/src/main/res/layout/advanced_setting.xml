<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_advanced_setting_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <cn.situne.itee.view.IteeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></cn.situne.itee.view.IteeTextView>

        <cn.situne.itee.view.IteeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></cn.situne.itee.view.IteeTextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_advanced_setting_bottom"
        android:layout_centerInParent="true"></RelativeLayout>
</RelativeLayout>