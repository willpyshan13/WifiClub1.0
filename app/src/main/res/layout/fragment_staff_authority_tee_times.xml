<RelativeLayout
    android:id="@+id/rl_content_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_no_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_courseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_separator_gray"/>

        <RelativeLayout
            android:id="@+id/rl_teeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_separator_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/common_separator_gray"/>

        <RelativeLayout
            android:id="@+id/rl_checkIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_separator_gray"/>

        <RelativeLayout
            android:id="@+id/rl_checkOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_separator_gray"/>

        <RelativeLayout
            android:id="@+id/rl_otherReservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_separator_gray"/>

    </LinearLayout>
</RelativeLayout>