<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_row_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/ll_left_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_9_hole_only_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_9_holes_only"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_block_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_block_time"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_member_only_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_member_only"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_prime_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_prime_time"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_separator_left"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_separator_gray"
            android:contentDescription="@string/menu_separator" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_middle_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/ll_middle_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_9_hole_only_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_9_holes_only"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_block_time_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_block_time"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_member_only_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_member_only"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_prime_time_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_prime_time"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/common_separator_gray"
            android:contentDescription="@string/menu_separator" />

        <ImageView
            android:id="@+id/iv_separator_middle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_separator_gray"
            android:contentDescription="@string/menu_separator" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_right_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/ll_right_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_9_hole_only_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_9_holes_only"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_block_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_block_time"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_member_only_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_member_only"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_prime_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/icon_segment_time_type_prime_time"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/common_separator_gray"
            android:contentDescription="@string/menu_separator" />

        <ImageView
            android:id="@+id/iv_separator_right"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_separator_gray"
            android:contentDescription="@string/menu_separator" />
    </RelativeLayout>

</LinearLayout>