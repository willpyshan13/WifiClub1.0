<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_content_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/common_light_gray"
    android:layout_height="match_parent">

    <ExpandableListView
        android:id="@+id/elv_play_purchase_history_shopping_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_play_purchase_history_send_sms"
        android:layout_marginBottom="20dp"
        android:divider="@color/common_separator_gray"
        />

    <RelativeLayout
        android:id="@+id/rl_play_purchase_history_send_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
