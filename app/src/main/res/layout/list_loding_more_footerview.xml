<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:background="@color/refresh_list_view_header_background">

    <ProgressBar
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:indeterminateDrawable="@drawable/list_pull_down_refresh_progressbar" />

    <cn.situne.itee.view.IteeTextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/common_white"
        android:layout_height="wrap_content"
        android:text="@string/app_list_header_refresh_loading_more"/>
</LinearLayout>
