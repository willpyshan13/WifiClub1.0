<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="-160dp"
              android:background="@color/common_white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_row_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_status"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:textColor="@color/common_black"/>

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_check_out"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:background="@drawable/bg_red_stroke"
            android:text="@string/check_out"
            android:textColor="@color/common_white"/>

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_shopping_cart"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/tv_check_out"
            android:gravity="center"
            android:background="@drawable/bg_green_stroke"
            android:text="@string/shopping"
            android:textColor="@color/common_white"/>

        <LinearLayout
            android:id="@+id/ll_commodity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/tv_shopping_cart"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_commodity_boy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_caddie"/>

            <ImageView
                android:id="@+id/iv_commodity_car"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_cart"/>

            <ImageView
                android:id="@+id/iv_commodity_club"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_club"/>

            <ImageView
                android:id="@+id/iv_commodity_shoes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_shoes"/>

            <ImageView
                android:id="@+id/iv_commodity_bag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_trolley"/>

            <ImageView
                android:id="@+id/iv_commodity_towel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_towel"/>

            <ImageView
                android:id="@+id/iv_commodity_umbrella"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_umbrella"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/ll_commodity"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <cn.situne.itee.view.IteeTextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_blue"/>

            <cn.situne.itee.view.IteeTextView
                android:id="@+id/tv_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bg_red_circle_location"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
