<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_content_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_play_member_id_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray"/>

            <RelativeLayout
                android:id="@+id/rl_play_member_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray"/>

            <RelativeLayout
                android:id="@+id/rl_play_member_effective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white">

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray"/>

            <RelativeLayout
                android:id="@+id/rl_play_member_create_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:orientation="vertical"
                android:id="@+id/ll_pricing_table"
                ></LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/common_gray"/>

            <LinearLayout
                android:id="@+id/ll_member_annual_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_play_member_annual_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_play_member_payment_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_deep_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_play_member_end_date_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="@color/common_gray"/>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_play_member_send_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
