<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ll_data_setting"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/common_blue">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_data_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white" />

    </LinearLayout>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="@color/common_separator_gray" />

    <LinearLayout
        android:id="@+id/ll_course_data"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/common_blue">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_course_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white" />

    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="@color/common_separator_gray" />

    <LinearLayout
        android:id="@+id/ll_tee_times"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/common_blue">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_tee_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_white" />

    </LinearLayout>

</LinearLayout>
