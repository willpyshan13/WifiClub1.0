<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_content_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/common_white"
            android:id="@+id/rl_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray"/>

        <RelativeLayout
            android:background="@color/common_white"
            android:id="@+id/rl_chooseProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray"/>

        <RelativeLayout
            android:background="@color/common_white"
            android:id="@+id/rl_promotePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray"/>

        <RelativeLayout
            android:background="@color/common_white"
            android:id="@+id/rl_unlimited_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray"/>

        <RelativeLayout
            android:background="@color/common_white"
            android:id="@+id/rl_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray"/>

        <RelativeLayout
            android:background="@color/common_white"
            android:id="@+id/rl_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray"/>

        <RelativeLayout
            android:background="@drawable/bg_linear_selector_color_white"
            android:id="@+id/rl_startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray"/>

        <RelativeLayout
            android:background="@drawable/bg_linear_selector_color_white"
            android:id="@+id/rl_endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
