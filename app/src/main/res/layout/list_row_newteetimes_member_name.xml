<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.situne.itee.view.IteeNetworkImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/member_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/iv_icon"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <cn.situne.itee.view.IteeTextView
                    android:id="@+id/tv_member_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textColor="@color/common_blue"
                    android:textSize="18sp" />


                <cn.situne.itee.view.IteeTextView
                    android:id="@+id/tv_member_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/common_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <cn.situne.itee.view.IteeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/customers_date_of_birth"
                    android:textSize="12sp"
                    android:textColor="@color/common_black" />

                <cn.situne.itee.view.IteeTextView
                    android:id="@+id/tv_birth_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/common_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <cn.situne.itee.view.IteeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:text="@string/customers_tel"
                    android:textColor="@color/common_black" />

                <cn.situne.itee.view.IteeTextView
                    android:id="@+id/tv_tel_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/common_gray" />

                <cn.situne.itee.view.IteeTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:text="@string/customers_zip_code"
                    android:textColor="@color/common_black" />


                <cn.situne.itee.view.IteeTextView
                    android:id="@+id/tv_zip_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical|end"
                    android:layout_weight="2"
                    android:textColor="@color/common_gray" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_separator_gray" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#00FF00">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/item_right_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/common_white"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>