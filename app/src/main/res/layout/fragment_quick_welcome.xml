<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
                android:background="@color/common_light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_user_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_blue" />

        <GridView
            android:id="@+id/quick_menu_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:verticalSpacing="1.0px"
            android:horizontalSpacing="1.0px"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:listSelector="@drawable/grid_selector"
            android:numColumns="3" />

    </LinearLayout>

</RelativeLayout>