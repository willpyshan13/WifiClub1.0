<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.situne.itee.view.IteeNetworkImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/member_photo"/>

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_icon"
            android:textColor="@color/wheel_blue"/>

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_tel_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_icon"
            android:text="@string/common_tel"/>

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_tel_key"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_separator_gray"/>
</LinearLayout>
