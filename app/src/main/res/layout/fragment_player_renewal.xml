<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_play_renewal_annual_fee"
            android:layout_width="match_parent"
            android:background="@color/common_white"
            android:layout_height="wrap_content"></RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray" />

        <RelativeLayout
            android:id="@+id/rl_play_renewal_split"
            android:layout_width="match_parent"
            android:background="@color/common_white"
            android:layout_height="wrap_content"></RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray" />

        <RelativeLayout
            android:id="@+id/rl_play_renewal_end_date"
            android:layout_width="match_parent"
            android:background="@color/common_white"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="@color/common_gray" />

        <RelativeLayout
            android:id="@+id/rl_play_renewal_payment_pattern"
            android:layout_width="match_parent"
            android:background="@color/common_white"
            android:layout_height="wrap_content"></RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_gray" />

        <RelativeLayout
            android:id="@+id/rl_play_renewal_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></RelativeLayout>
    </LinearLayout>


</RelativeLayout>
