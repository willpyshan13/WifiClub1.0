<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/list_item_bottom_line"
        android:layout_height="match_parent">


        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/common_black"
            android:textSize="18sp" />

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/common_black"
            android:textSize="18sp" />

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:gravity="end"
            android:textColor="@color/common_gray"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/common_white">

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/item_right_refund"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/common_wanted_red"
            android:gravity="center"
            android:text="@string/newteetimes_btn_incoming_add"
            android:textColor="@color/common_white" />

        <cn.situne.itee.view.IteeTextView
            android:id="@+id/item_right_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/item_right_refund"
            android:layout_weight="1"
            android:background="@color/common_wanted_green"
            android:gravity="center"
            android:text="@string/newteetimes_btn_incoming_call"
            android:textColor="@color/common_white" />
    </LinearLayout>

</LinearLayout>