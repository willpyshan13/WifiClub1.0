<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_no_content">

    <ScrollView
        android:id="@+id/sv_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_segment_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <cn.situne.itee.view.SlideExpandableListView
                android:id="@+id/lv_segment_history_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:drawSelectorOnTop="false" />

            <RelativeLayout
                android:id="@+id/rl_segment_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_segment_course"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_segment_out"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_in"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_deep_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_other_kind"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>


            <!--<RelativeLayout
                android:id="@+id/rl_segment_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_seperator_gray" />
            </RelativeLayout>-->

            <LinearLayout
                android:id="@+id/ll_segment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_white"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_segment_change_field"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:background="@color/common_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />


                <RelativeLayout
                    android:id="@+id/rl_segment_change_top"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_separator_gray" />

                <RelativeLayout
                    android:id="@+id/rl_segment_change_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_separator_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_segment_change_field_below"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@color/common_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_separator_gray" />

                <RelativeLayout
                    android:id="@+id/rl_segment_change_bottom_below"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_separator_gray" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_start_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_end_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_all_reserved"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/common_white"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_member_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_life_member"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_deep_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_family_member"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_deep_gray" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_prime_time"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="@color/common_white"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/popup_courseWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
