<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_no_content">

    <ScrollView
        android:id="@+id/sv_segment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_segment_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <cn.situne.itee.view.SlideExpandableListView
                android:id="@+id/lv_segment_history_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="false"
                android:groupIndicator="@null" />

            <RelativeLayout
                android:id="@+id/rl_segment_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_segment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/common_white"
                android:orientation="vertical">

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_segment_course"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@color/common_white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/common_separator_gray" />


            <ListView
                android:id="@+id/course_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transfer_course_item">

            </ListView>


            <LinearLayout
                android:id="@+id/ll_two_tee_start_btn"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:background="@color/common_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_two_tee_start_course_first"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_separator_gray" />

                <RelativeLayout
                    android:id="@+id/rl_two_tee_start_course_second"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_three_tee_start_btn"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:background="@color/common_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_three_tee_start_course_first"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_separator_gray" />

                <RelativeLayout
                    android:id="@+id/rl_three_tee_start_course_second"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/common_separator_gray" />

                <RelativeLayout
                    android:id="@+id/rl_three_tee_start_course_third"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/common_white"
                    android:gravity="center_vertical">

                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/common_separator_gray" />

            <RelativeLayout
                android:id="@+id/rl_segment_start_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/common_white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_end_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/common_separator_gray" />

            <RelativeLayout
                android:id="@+id/rl_segment_all_reserved"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="8dp"
                android:background="@color/common_white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_segment_member_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/common_white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />

            </RelativeLayout>

            <ListView
                android:id="@+id/member_type_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transfer_course_item">

            </ListView>


            <RelativeLayout
                android:id="@+id/rl_segment_prime_time"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="8dp"
                android:background="@color/common_white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/common_separator_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_separator_gray" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/popup_courseWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
